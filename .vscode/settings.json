{
    "restoreTerminals.terminals": [
        {
          "splitTerminals": [
            {
                "name": "server",
                "commands": [
                    "cd backend",
                    "test -d venv || python3.12 -m venv venv",
                    "source venv/bin/activate",
                    "poetry install",
                    "python3.12 local.py"
                ]
            },
            {
                "name": "client",
                "commands": ["cd frontend", "npm install", "npm start"]
            }
          ]
        }
      ]
    }