{
    "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
            "name": "server",
            "commands": [
                "cd backend",
                "test -d venv || python3 -m venv venv",
                "source venv/bin/activate",
                "poetry install",
                "python3 local.py"
            ]
        },
        {
            "name": "client",
            "commands": ["cd frontend", "npm install", "npm run dev"]
        }
      ]
    }
  ]
}